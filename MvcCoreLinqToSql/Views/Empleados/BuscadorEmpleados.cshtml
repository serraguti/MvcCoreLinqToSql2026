<h1>Buscador empleados Linq</h1>

<form method="post">
    <label>Oficio: </label>
    <input type="text" name="oficio"
        class="form-control"/>
    <label>Salario: </label>
    <input type="text" name="salario"
        class="form-control"/>
    <button class="btn btn-info">
        Buscar empleados
    </button>
</form>
<h3 style="color:red">
    @ViewData["MENSAJE"]
</h3>
@if (Model != null)
{
    <table class="table table-warning">
        <thead>
            <tr>
                <th>Apellido</th>
                <th>Oficio</th>
                <th>Salario</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Empleado empleado in Model)
            {
                <tr>
                    <td>@empleado.Apellido</td>
                    <td>@empleado.Oficio</td>
                    <td>@empleado.Salario</td>
                </tr>
            }
        </tbody>
    </table>
}